<?xml version="1.0" encoding="UTF-8"?>
<promotions xmlns="http://www.demandware.com/xml/impex/promotion/2008-01-31">
    <campaign campaign-id="New Campaign - 5/28/22 1:13:28 am">
        <description>Campaign, promotions and coupons.</description>
        <enabled-flag>true</enabled-flag>
        <campaign-scope>
            <applicable-online/>
        </campaign-scope>
        <customer-groups match-mode="any">
            <customer-group group-id="Everyone"/>
        </customer-groups>
        <coupons>
            <coupon coupon-id="trainingCoupon"/>
        </coupons>
    </campaign>

    <promotion promotion-id="trainingpromotionFreeShipping">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>true</searchable-flag>
        <refinable-flag>false</refinable-flag>
        <prevent-requalifying-flag>false</prevent-requalifying-flag>
        <prorate-across-eligible-items-flag>false</prorate-across-eligible-items-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">Training FreeShipping over $150</name>
        <callout-msg xml:lang="x-default">Free Shipping over $150</callout-msg>
        <details xml:lang="x-default">Free Shipping over $150</details>
        <product-promotion-rule>
            <qualifying-products>
                <included-products>
                    <condition-group>
                        <price-condition operator="greater than">
                            <price>150.99</price>
                        </price-condition>
                    </condition-group>
                </included-products>
            </qualifying-products>
            <discounts condition-type="product-amount">
                <discount>
                    <threshold>0.0</threshold>
                    <free-shipping/>
                </discount>
            </discounts>
        </product-promotion-rule>
    </promotion>

    <promotion-campaign-assignment promotion-id="trainingpromotionFreeShipping" campaign-id="New Campaign - 5/28/22 1:13:28 am">
        <qualifiers match-mode="any">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

</promotions>
